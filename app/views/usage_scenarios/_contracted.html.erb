<p>
	<%= link_to '.', expand_tool_usage_scenario_path(tool,d), :class => 'descriptionplus_icon', :remote => true %>    
	<% if !d.title.blank? %>  
	<%   if !d.authors.empty? %>
		   <b class='title'><%= d.title %></b>
		   <span class='by'><%= ' by ' %></span>
	       <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   else %>
	       <b class='title'><%= d.title %></b>
	<%   end %>
	<% else %>  
	<%   if !d.authors.empty? %>
	       <b class='title'>Usage Scenario</b>
           <span class='by'><%= ' by ' %></span>
	       <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   end %>
	<% end %> 
	<span class='last_updated'>(<%= 'last updated '"#{h(d.updated_at.to_date.to_formatted_s(:long))}" %>)</span>	
</p>
  <% if full_access? -%>
	<p>
  <%= link_to 'edit usage scenario', edit_tool_usage_scenario_path(tool,d), :class => 'ui_definition_dialog', :onclick => "unsetTextareaToTinyMCE('usage_scenario_content');", :remote => true  %>
	</p>
  <% end -%>
