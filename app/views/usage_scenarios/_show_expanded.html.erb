<p>
	<%=   link_to '.', contract_show_tool_usage_scenario_path(tool,d), :class => 'descriptionminus_icon', :remote => true  %>   
	<% if !d.title.blank? %>  
	<%   if !d.authors.empty? %>
		   <b class='title'><%= d.title %></b>
		   <span class='by'><%= ' by ' %></span>
	       <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   else %>
	       <b class='title'><%= d.title %></b>
	<%   end %>
	<% else %>  
	<%   if !d.authors.empty? %>
	       <b class='title'>Usage Scenario</b>
           <span class='by'><%= ' by ' %></span>
	       <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   end %>
	<% end %> 
	<span class='last_updated'>(<%= 'last updated '"#{h(d.updated_at.to_date.to_formatted_s(:long))}" %>)</span>	
</p>
<%  if !d.scenario_type.nil? %>
	<p>
		<b><%= 'A '"#{d.scenario_type.title}"' Usage Scenario'  %></b>
	</p>
<%  end %>
<p>
	<%= d.content.html_safe %>
</p>
<%  if !d.sources.empty? %>
    <h4><div class='padded'>Usage Scenario Sources</div></h4>
<%  end %>
    <div id='usagescenariosources_div' class='padded'>
    <%  if !d.sources.empty? %>
    <%=   render :partial => 'sources/show_sources', :locals => {:resource => d} %>
    <%  end %>
    </div>