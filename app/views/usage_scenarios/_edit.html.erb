
<h4><%= "Editing Usage Scenario for <em>#{h(@tool.name)}</em>" %></h4>
<%= error_messages_for :usage_scenario %>
<% remote_form_for(:usage_scenario, :url => tool_usage_scenario_path(@tool, @usage_scenario), :before => "tinyMCE.triggerSave();", :update => 'usage_scenarios_div', :html => { :method => :put}) do |f| %>
 
</p>
<%= render :partial => 'form', :locals => {:f => f, :default_author_id => nil} %> 
<p>
	<%= submit_to_remote 'update_btn', 'Update Usage Scenario', :url => { :action => 'update' }, :before => "tinyMCE.triggerSave(); unsetTextareaToTinyMCE('usage_scenario_content');", :update => 'usage_scenarios_div', :html => { :method => :put} %>
	
 </p>
<% end %>
<p>
<%=  link_to_remote 'Delete', {:url => tool_usage_scenario_path(@tool, @usage_scenario), :confirm => 'Are you sure?', :update => 'usage_scenarios_div', :method => :delete}, :onclick => "unsetTextareaToTinyMCE('usage_scenario_content');" %> |

<%= link_to_remote 'Cancel', {:url => tool_usage_scenarios_path(@tool), :method => 'get'}, :onclick => "unsetTextareaToTinyMCE('usage_scenario_content');" %>
</p>