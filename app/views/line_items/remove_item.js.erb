<%  when "credentials" %>
	$("#credentials_div").html("<%= escape_javascript(render(:partial => 'common/dynamic_list', :object => @credentials, :locals => { :category => 'credentials'} )) %>")
<%  when "affiliations" %>
	$("#affiliations_div").html("<%= escape_javascript(render(:partial => 'common/dynamic_list', :object => @affiliations, :locals => { :category => 'affiliations'} )) %>")
<% end %>