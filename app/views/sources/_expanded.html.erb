
<% if s.resource_type == 'Review' %>
<%   edit_path = edit_tool_review_source_path(@tool, resource, s) %>
<%   contract_path = contract_tool_review_source_path(@tool, resource, s) %>
<%   hash_path = hash_for_edit_tool_review_source_path %>
<%   div_updated = 'reviewsources_div' %>
<%   new_translated_path = new_tool_review_source_translated_source_path(@tool, resource, s) %>
<%   hash_translated_path = hash_for_new_tool_review_source_translated_source_path  %>
<% else %>
<%   if s.resource_type == 'UsageScenario' %>
<%     edit_path = edit_tool_usage_scenario_source_path(@tool, resource, s) %>
<%     contract_path = contract_tool_usage_scenario_source_path(@tool, resource, s) %>
<%     hash_path = hash_for_edit_tool_usage_scenario_source_path %>
<%     div_updated = 'usagescenariosources_div' %>
<%     new_translated_path = new_tool_usage_scenario_source_translated_source_path(@tool, resource, s) %>
<%     hash_translated_path = hash_for_new_tool_usage_scenario_source_translated_source_path  %>
<%   else %>  
<%     edit_path = edit_tool_source_path(@tool, s) %>
<%     contract_path = contract_tool_source_path(@tool, s) %>
<%     hash_path = hash_for_edit_tool_source_path %>
<%     div_updated = 'toolsources_div' %>
<%     new_translated_path = new_tool_source_translated_source_path(@tool, s) %>
<%     hash_translated_path = hash_for_new_tool_source_translated_source_path  %>
<%   end %>
<% end %>

<% form_remote_tag :url => new_translated_path , :update => div_updated, :html => { :method => :get} do %>
	<p>
	<%= link_to_remote '.', {:url => contract_path, :update => "#{s.id}_sourcediv", :method => 'get'},  { :class => 'descriptionminus_icon' }  %>
	<%=  link_to_remote('MMS #'"#{s.mms_id}"', ' + formated_mms_pages(s), :url => edit_path, :update => div_updated, :method => :get )  %>	
  	</p>

    <div class='padded'>
		<p>
		  <% if !s.passage.blank? %>	
			<b>Passage:</b>
	  		<%= s.passage %>
	      <% end %>
		</p>
		<p>
		  <% if !s.note.blank? %>
	  		<b>Note:</b>
	  		<%= s.note %>
	      <% end %>
		</p>

		<p>
		  <% if !s.translated_sources.empty? %>
		    <b>Source Translations:</b>
			<div class='padded'>
		    <% if s.resource_type == 'Review' %> 
				<%= ( s.translated_sources.collect { |t| "#{t.title} (#{ link_to_remote("<i>#{t.language.title}#{"#{", from #{join_with_and(t.authors.collect{|a| a.name})}" if !t.authors.empty?}"}</i>", {:url => edit_tool_review_source_translated_source_path(@tool,resource,s,t), :update => div_updated, :method => :get})  })" }).join(', ') %>		 
		    <% else %>
		    <%   if s.resource_type == 'UsageScenario' %>
					<%= ( s.translated_sources.collect { |t| "#{t.title} (#{ link_to_remote("<i>#{t.language.title}#{"#{", from #{join_with_and(t.authors.collect{|a| a.name})}" if !t.authors.empty?}"}</i>", {:url => edit_tool_usage_scenario_source_translated_source_path(@tool,resource,s,t), :update => div_updated, :method => :get})  })" }).join(', ') %>			
			<%   else %>
				<%= ( s.translated_sources.collect { |t| "#{t.title} (#{ link_to_remote("<i>#{t.language.title}#{"#{", from #{join_with_and(t.authors.collect{|a| a.name})}" if !t.authors.empty?}"}</i>", {:url => edit_tool_source_translated_source_path(@tool,s, t), :update => div_updated, :method => :get})  })" }).join(', ') %>	
			<%   end%>	
		    <% end %>
		    </div>
		  <% end %>
		</p>
		<p>
		  <%=   link_to_remote 'add Source Translation', :url => new_translated_path, :update => div_updated, :method => 'get'%>
		</p>
	</div>	
<% end %>