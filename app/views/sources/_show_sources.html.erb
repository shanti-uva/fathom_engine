<p><b>Detail for textual sources:</b></p>
<%   resource.sources.find(:all).each do |s| %>
	   <div id="<%= "#{s.id}_sourcediv" %>">
<%     if @source.nil? 	%>	
<%=      render :partial => 'sources/show_contracted', :locals => {:resource => resource, :s => s} %>
<%     else %>
<%       if s == @source %>
<%=        render :partial => 'sources/show_expanded', :locals => {:resource => resource, :s => s} %>
<%	     else %>
<%=        render :partial => 'sources/show_contracted', :locals => {:resource => resource, :s => s} %>
<%       end %>
<%     end %>
       </div>
<%   end %>
