<% tool.reviews.order('id').each do |r| %>
	<div id="<%= "#{r.id}_descdiv" %>">
<%  if review.nil? 		
      if r.is_primary? %>
		<%=   render :partial => 'reviews/expanded', :locals => {:tool => tool, :d => r} %>
<%	  else %>
		<%=   render :partial => 'reviews/contracted', :locals => {:tool => tool, :d => r} %>
<%    end %>
<%  else %>
<%    if r == review %>
<%=     render :partial => 'reviews/expanded', :locals => {:tool => tool, :d => r} %>
<%	  else %>
<%=     render :partial => 'reviews/contracted', :locals => {:tool => tool, :d => r} %>
<%    end %>
<%  end %>
    </div>
<% end %>
<% if full_access? -%>
  <p>
  <%= link_to 'Add review', new_tool_review_path(tool), :class => 'ui_definition_dialog', :onclick => "unsetTextareaToTinyMCE('review_content');",  :remote => true, :title=>'Add Review' %>
  </p>
<% end -%>