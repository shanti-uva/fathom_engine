<p>
	<%=   link_to_remote '.', {:url => contract_show_tool_review_path(tool,d), :update => "#{d.id}_descdiv", :method => 'get'},  { :class => 'descriptionminus_icon' }  %>  
	<% if !d.title.blank? %>  
	<%   if !d.authors.empty? %>
		   <b class='title'><%= d.title %></b>
		   <span class='by'><%= ' by ' %></span>
	       <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   else %>
	       <b class='title'><%= d.title %></b>
	<%   end %>
	<% else %>     
	<%   if !d.authors.empty? %>
	       <b class='title'>Review</b>
	       <span class='by'><%= ' by ' %></span>
		   <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.name})}" %></span>
	<%   end %>
	<% end %>
	<span class='last_updated'>(<%= 'last updated '"#{h(d.updated_at.to_date.to_formatted_s(:long))}" %>)</span>
</p>
<p>
	<%= d.content %>
</p>
<%  if !d.sources.empty? %>
    <h4><div class='padded'>Review Sources</div></h4>
<%  end %>
    <div id='reviewsources_div' class='padded'>
    <%  if !d.sources.empty? %>
    <%=   render :partial => 'sources/show_sources', :locals => {:resource => d} %>
    <%  end %>
    </div>
