<h3><%= ('Review for '"<em>#{h(@tool.name)}</em>") %></h3>
<%= error_messages_for :review %>
  <% remote_form_for(:review, :url => tool_reviews_path(@tool), :before => "tinyMCE.triggerSave();", :update => 'descriptions_div') do |f| %>

<%=  render :partial => 'reviews/form', :locals => {:f => f} %>

<p>
<%= submit_to_remote 'update_btn', 'Create Review', :url => { :action => 'create' }, :before => "tinyMCE.triggerSave(); unsetTextareaToTinyMCE('review_content');", :update => 'descriptions_div', :html => { :method => :put} %>
</p>
<% end %>
<p>
<%= link_to_remote 'Cancel', {:url => tool_reviews_path(@tool), :method => 'get'}, :onclick => "unsetTextareaToTinyMCE('review_content');" %>
</p>
